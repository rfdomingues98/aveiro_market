<section class="signup">
    <div class="container mt-5">
        <form class="form w-100 p-5" role="form" method="post">
            <div class="form-row d-flex flex-column align-items-center">
                <h3 class="h6 mb-3">Profile Picture</h3>
                <div class="input-group px-3 mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01"
                            aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mt-3 px-3">
                    <label for="firstName">Display Name</label>
                    <input class="form-control" type="text" name="firstName" id="firstName">
                </div>
                <div class="col-md-6 mt-3 px-3">
                    <label for="lastName">Address</label>
                    <input class="form-control" type="text" name="lastName" id="lastName">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mt-3 px-3">
                    <label for="emailAddress">Email Address</label>
                    <input class="form-control" type="email" name="emailAddress" id="emailAddress">
                </div>
                <div class="col-md-6 mt-3 px-3">
                    <label for="mobileNumber">Mobile Number </label>
                    <input class="form-control" type="tel" pattern="[0-9]{9}" name="mobileNumber" id="mobileNumber">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mt-3 px-3">
                    <label for="password1">Facebook</label>
                    <input class="form-control" type="text" name="password1" id="password1">
                </div>
                <div class="col-md-6 mt-3 px-3">
                    <label for="password2">Instagram</label>
                    <input class="form-control" type="text" name="password2" id="password2">
                </div>
            </div>
            <div class="form-row mt-5 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</section>