{{# ifNotEquals warning_msg ''}}
<div id="alert" class="alert alert-warning alert-dismissible mx-2 mt-2 fade show" data-auto-dismiss role="alert">
    <strong>Warning!</strong> {{warning_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/ ifNotEquals}}
{{# ifNotEquals success_msg ''}}
<div class="alert alert-success alert-dismissible mx-2 mt-2 fade show" data-auto-dismiss role="alert">
    <strong>Success!</strong> {{success_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/ ifNotEquals}}
{{# ifNotEquals error ''}}
<div class="alert alert-warning alert-dismissible mx-2 mt-2 fade show" data-auto-dismiss role="alert">
    <strong>Error!</strong> {{error}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/ ifNotEquals}}