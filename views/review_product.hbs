<section class="review">
    <div class="container mt-5">
        <form method="POST" action="">
            <h1 class="h3">Add review</h1>
            <div class="contents p-5">
                <h3 class="h5">Rating</h3>
                <div class="rateit" data-rateit-step="1" data-rateit-resetable="false" data-rateit-mode="font"
                    style="font-family:fontawesome">
                </div>
                <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
                <script type="text/javascript">
                    var configFontAwesome = {
                        custom: {
                            families: ['fontawesome'],
                            urls: ['https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css']
                        },
                        fontactive: function () {
                            $('.rateit-fa').rateit();
                        }
                    };
                    WebFont.load(configFontAwesome);
                </script>
                <h3 class="h5 mt-3">Review</h3>
                <textarea class="form-control" id="inputDetails"></textarea>
                <button type="submit" class="btn btn-primary mt-3">Add Review</button>
            </div>
        </form>
    </div>
</section>